@model AgenciaVorazes.Models.Pacotes

@{
    ViewData["Title"] = "Delete";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Agência Vorazes</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body class="corpo-destino">
    <section id="hero">
        <h1>Deletar</h1>
    </section>
    <br />
    <br />
    <h3 class="text-center">Tem certeza que vai deletar?</h3>
    <div class="container-fluid">
        <dl>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Origem)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Origem)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Destino)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Destino)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Preço)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Preço)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DataIda)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DataIda)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DataVolta)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DataVolta)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="IdPacotes" />
            <input type="submit" value="Deletar" class="btn btn-danger" /> |
            <a asp-action="Index">Voltar</a>
        </form>
    </div>
    <br />
    <br />
</body>
</html>