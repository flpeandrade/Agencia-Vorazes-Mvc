@model AgenciaVorazes.Models.Pacotes

@{
    ViewData["Title"] = "Details";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Agência Vorazes</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/js/site.js" />
</head>
<body class="corpo-destino">
    <section id="hero">
        <h1>Detalhes</h1>
    </section>
    <br />
    <br />
    <div class="container-fluid">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Origem)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Origem)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Destino)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Destino)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Preço)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Preço)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DataIda)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DataIda)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DataVolta)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DataVolta)
            </dd>
        </dl>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.IdPacotes">Editar</a> |
            <a asp-action="Index">Voltar</a>
        </div>
    </div>
    <br />
    <br />
</body>
</html>